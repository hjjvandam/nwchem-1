# LDA exchange

dft
  vectors input atomic
  xc slater
end
task dft energy

# GGA exchange

dft
  vectors input atomic
  xc xpbe96
end
task dft energy

dft
  direct
  vectors input atomic
  xc xwpbe 1.00 hfexch 1.00
  cam 0.3 cam_alpha 0.00 cam_beta 1.00
end
task dft energy

set dft:cam_exch F

# meta-GGA exchange

dft
  vectors input atomic
  xc xvs98
end
task dft energy

