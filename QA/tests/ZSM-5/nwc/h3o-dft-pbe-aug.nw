echo
start h3o-dat

memory heap 100 mb stack 1024 mb global 2048 mb

geometry
  load ../xyz/h3o+.xyz
end
charge +1

basis "cc-pvdz" spherical
  * library aug-cc-pvdz
end
basis "cc-pvtz" spherical
  * library aug-cc-pvtz
end
basis "cc-pvqz" spherical
  * library aug-cc-pvqz
end
basis "cc-pv5z" spherical
  * library aug-cc-pv5z
end
basis "cc-pv6z" spherical
  * library aug-cc-pv6z
end

dft 
  direct
  # select PBE functional following https://doi.org/10.1002/aic.15517
  xc xpbe96 cpbe96
end

set int:txs:limxmem              50000000

set "ao basis" "cc-pvdz"
task dft optimize

set "ao basis" "cc-pvtz"
task dft optimize

set "ao basis" "cc-pvqz"
task dft optimize

set "ao basis" "cc-pv5z"
task dft optimize

set "ao basis" "cc-pv6z"
task dft optimize
