Title "QM/MM of Lys monomer"


memory total 1000 Mb

start lys_qmmm

echo

# A basis set must be defined for the QM part 

basis "ao basis" 
  O library "6-31G*"
  H library "6-31G*"
  C library "6-31G*"
  N library "6-31G*"
  F library "6-31G*"
END


# There is a net charge on NH3 group
charge 1.0

# Specify any SCF details
dft
 iterations 100
end

driver
clear
maxiter 30
end


md
 system lys_em
 sd 50   init 0.01   min 0.00001   max 0.05
 cg 30   init 0.01   min 1.0E-8    cy 10
 cutoff 1.9   qmmm 1.8
 memory 15000
end

qmmm
 eatoms -95
 link halogen
end

task shell "cp lys0.rst lys_em.rst"

# Run QM/MM optimization.
task qmmm dft optimize


