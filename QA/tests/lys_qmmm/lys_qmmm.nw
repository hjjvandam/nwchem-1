title "QM/MM of Lys monomer"


memory total 1000 Mb

start lys_qmmm

echo

charge 1.0

task shell "cp lys0.rst lys_em.rst"

basis "ao basis" 
  * library "6-31G*"
end

dft
 iterations 100
end

driver
clear
maxiter 30
end

md
 system lys_em
 sd 200   init 0.01   min 0.00001   max 0.05
 cutoff 1.9   qmmm 1.8
 memory 15000
end

qmmm
 eatoms -85
 bq_exclude none
 link_atoms halogen
 optimization qm
 link_ecps auto
end


# Run QM/MM optimization.
task qmmm dft optimize


