Title "QM/MM of Lys monomer"


memory total 1000 Mb

start lys

echo

task shell "cp lys0.rst lys_em.rst"

# A basis set must be defined for the QM part 

basis "ao basis" 
  * library "6-31G*"
end


charge 1.0

dft
 iterations 100
end

driver
clear
maxiter 30
xyz test
end


md
 system lys_em
 sd 200   init 0.01   min 0.00001   max 0.05
 cutoff 1.9   qmmm 1.0
 memory 15000
 record coord 1 rest 1
end

qmmm
 eatoms -84
 bq_exclude none
 print debug_info
 link_atoms halogen
 link_bonds free
 optimization qm
 link_ecps auto
 bq_update static
end

task qmmm dft optimize ignore


