echo
title "NWChem molecular dynamics"
memory noverify heap 10 mb stack 94 mb global 20 mb

start had

md
 system had_md
 cutoff 1.0
 step 0.002 equil 0 data 10
 print step 1 stat 10 expect 0 timing
 isotherm 298.15 trelax 0.1 0.1
 isobar 1.025e5 trelax 0.4
 pme grid 32 order 4
 load pairs 5 size 0.75 average
 record coord 0 rest 0 prop 0 sync 10 scoor 0
 record times 10 200 201 -202 203 204 -216 210 211 212 213 214
 update pairs 10
 boxes 6 6 6
 mwm 3000
 msa 3000
 develop 2
 test 10
end

