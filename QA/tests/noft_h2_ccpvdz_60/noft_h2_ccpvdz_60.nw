echo
start h2_noft

scratch_dir   .
permanent_dir .

geometry units angstrom noautosym
H        0.0000000000      0.0000000000      3.0
H        0.0000000000      0.0000000000     -3.0
end

basis spherical
  * library "cc-pvdz"
end

scf
  uhf
  vectors input atomic output h2_noft_dat.movecs
end

noft
  temperature 0.0
  restricted
  c_ab 0.25
  pairrotation
  maxiter 1000
  vectors input h2_noft_dat.movecs output h2_noft_dat.movecs
end

task scf  energy
task noft energy
