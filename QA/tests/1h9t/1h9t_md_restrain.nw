echo
start md-restrain_dat

set sp:adios_mode BPFile
set sp:adios_mode Null

md
  msa 10000
  system 1h9t-restrain_md
  leapfrog
  #pmf
  distar
  step 0.002 equil 0 data 5000
  #isotherm 298.15 trelax 0.1
  isobar
  noshake
  #print step 10 pmf 10 out6
  print step 10 out6
  record coord 1 ascii
  #
  # At a velocity of 0.5 the protein is significantly compressed
  # up on collision. So this speed is too high.
  #
  #   veladj 7715 8958 0.0  0.500  0.0
  #
  # At a velocity of 0.25 the DNA and protein just meet upon
  # contact.
  #
  veladj 7715 8958 0.0  0.250  0.0
end

task md dynamics
