 -2    0     2.1   2.1
 -2    0    -2.1   2.1
 -2    2.1   0     2.1
 -2   -2.1   0     2.1
 -2    0     0     4.2
 -2    0     2.1  -2.1
 -2    0    -2.1  -2.1
 -2    2.1   0    -2.1
 -2   -2.1   0    -2.1
 -2    0     0    -4.2
end

set geometry nio_new

dft
  mult 1
  odft
vectors input fragment o.mos \
nia.mos nib.mos output nio_new.mos
end

