g(x,a,y,z)=(((x+a)**y-a**y)/((1.0+a)**y-a**y))**z
e(x,y,z,a)=(f(x,a,y)*log(f(x,a,y))+f(1.0-x,a,y)*log(f(1.0-x,a,y)))**z
f(x,a,y,z)=((g(x,a,y,1)*log(g(x,a,y,1))+g(1-x,a,y,1)*log(g(1-x,a,y,1)))/(2.0*g(0.5,a,y,1)*log(g(0.5,a,y,1))))**z
set xrange [0:1]
set isosamples 20
