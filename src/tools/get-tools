#!/bin/csh
#
# $Id: get-tools,v 1.14 2008-08-13 20:58:50 jhammond Exp $
#

unalias mv
unalias rm

set TOOLDIR = `pwd`
if (-e $TOOLDIR/armci) then
echo "You have an old copy of the ga tools, deleting it now"
   rm -rf $TOOLDIR/armci
   rm -rf $TOOLDIR/cca
   rm -rf $TOOLDIR/config
   rm -rf $TOOLDIR/ga++
   rm -rf $TOOLDIR/global
   rm -rf $TOOLDIR/LinAlg
   rm -rf $TOOLDIR/ma
   rm -rf $TOOLDIR/pario
   rm -rf $TOOLDIR/tcgmsg
   rm -rf $TOOLDIR/tcgmsg-mpi
endif

svn checkout https://svn.pnl.gov/svn/hpctools/trunk/ga
cd ga
rm -f README
rm -f license.txt
rm -f INSTALL
rm -f NOTES
mv -f * ..
cd ..
rm -rf ga

svn checkout https://svn.pnl.gov/svn/hpctools/branches/cvs-dev/ga
mv -f ga/pario/sf/sf.fh ga/pario/sf/sf_fortran.c ga/pario/sf/sf.h ga/pario/sf/shared.files.c pario/sf/.
rm -rf ga

