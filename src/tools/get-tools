#!/bin/csh
#
# $Id: get-tools,v 1.5 1999-07-29 18:09:35 d3h325 Exp $
#
# We need to rename CVS associated with nwchem repository while
# checking out tools for the first time

# get-tools [version]

if ($#argv == 0) then
   set version = ' '
else if ($#argv == 1) then
   set version = $1
else
   echo ' Usage:  get-tools [version] '
   exit 1
endif

mv CVS CVS0
setenv CVSROOT /msrc/proj/hpctools
set subdirs = "config global armci LinAlg pario ma tcgmsg tcgmsg-mpi server"
foreach d ( $subdirs )
   if ("$version" == " ") then
     echo "cvs co $d"
     cvs co $d
   else
     echo "cvs co -r $version $d"
     cvs co -r $version $d
   endif
end
# restore the nwchem CVS directory 
mv CVS0 CVS
