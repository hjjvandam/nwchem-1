#!/bin/csh
#
# $Id: get-tools,v 1.4 1999-07-27 21:04:57 d3e129 Exp $
#
# We need to rename CVS associated with nwchem repository while
# checking out tools for the first time
mv CVS CVS0
setenv CVSROOT /msrc/proj/hpctools
set subdirs = "config global armci LinAlg pario ma tcgmsg tcgmsg-mpi server"
foreach d ( $subdirs )
   echo "cvs co $d"
   cvs co $d
end
# restore the nwchem CVS directory 
mv CVS0 CVS
